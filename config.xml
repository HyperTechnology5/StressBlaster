<?xml version='1.0' encoding='utf-8'?>
<widget id="net.oink.ht5.myblaster" version="0.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Stress Blaster</name>
    <description>
       Relieve stress by blasting stuff on the screen.
    </description>
    <author email="alejandro_liu@hotmail.com" href="https://github.com/HyperTechnology5">
        Hyper Technology 5 Team
    </author>
    <hook src="scripts/appBeforeBuild.sh" type="before_run" />
    <hook src="scripts/appBeforeBuild.sh" type="before_build" />
    <icon src="www/img/logo.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-camera-preview" spec="^0.9.0" />
    <plugin name="cordova-plugin-screen-orientation" spec="^2.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
